extends ../../layouts/default.pug

block main
  h1(class="mb-4") Thêm mới sản phẩm

  form(
    action=`${prefixAdmin}/products/create`
    method="POST"
    enctype="multipart/form-data"
  )
    //- Tiêu đề
    .form-group
      label(for="title") Tiêu đề
      input.form-control(
        type="text"
        id="title"
        name="title"
        required
        placeholder="Nhập tiêu đề..."
      )

    //- Mô tả
    .form-group
      label(for="description") Mô tả
      textarea.form-control(
        id="description"
        name="description"
        rows="4"
        placeholder="Nhập mô tả..."
      )

    //- Giá
    .form-group
      label(for="price") Giá
      input.form-control(
        type="number"
        id="price"
        name="price"
        min="0"
        value="0"
      )

    //- % Giảm giá
    .form-group
      label(for="discountPercentage") % Giảm giá
      input.form-control(
        type="number"
        id="discountPercentage"
        name="discountPercentage"
        min="0"
        max="100"
        value="0"
      )

    //- Số lượng
    .form-group
      label(for="stock") Số lượng
      input.form-control(
        type="number"
        id="stock"
        name="stock"
        min="0"
        value="0"
      )

    //- Ảnh (NHẬP LINK)
    .form-group
      label(for="thumbnail") Ảnh 
      input.form-control(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
      )

    //- Trạng thái (RADIO)
    .form-group
      label Trạng thái
      .form-check
        input.form-check-input(
          type="radio"
          name="status"
          id="status-active"
          value="active"
          checked
        )
        label.form-check-label(for="status-active") Hoạt động
      .form-check
        input.form-check-input(
          type="radio"
          name="status"
          id="status-inactive"
          value="inactive"
        )
        label.form-check-label(for="status-inactive") Dừng hoạt động

    //- Vị trí
    .form-group
      label(for="position") Vị trí
      input.form-control(
        type="number"
        id="position"
        name="position"
        min="1"
        placeholder="Tự động"
      )

    .mt-3
      button.btn.btn-primary(type="submit") Tạo mới
      a.btn.btn-secondary.ml-2(href=`${prefixAdmin}/products`) Quay lại


    script(src="/admin/js/product.js")
