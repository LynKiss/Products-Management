extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alertSuccess(5000)
  +alertError(5000)
  h1(class="mb-4") Chỉnh sửa sản phẩm
  form(
    action=`${prefixAdmin}/products/edit/${product.id}?_method=PATCH`
    id="form-edit-product"
    method="POST"
    enctype="multipart/form-data"
  )
    //- Tiêu đề
    .form-group
      label(for="title") Tiêu đề
      input.form-control(
        type="text"
        id="title"
        name="title"
        required
        placeholder="Nhập tiêu đề..."
        value=product.title
      )

    //- Mô tả
    .form-group
      label(for="description") Mô tả
      textarea.form-control(
        id="description"
        name="description"
        rows="4"
        placeholder="Nhập mô tả..."
        value=product.description
      )

    //- Giá
    .form-group
      label(for="price") Giá
      input.form-control(
        type="number"
        id="price"
        name="price"
        min="0"
        value=product.price
      )

    //- % Giảm giá
    .form-group
      label(for="discountPercentage") % Giảm giá
      input.form-control(
        type="number"
        id="discountPercentage"
        name="discountPercentage"
        min="0"
        max="100"
        value=product.discountPercentage
      )

    //- Số lượng
    .form-group
      label(for="stock") Số lượng
      input.form-control(
        type="number"
        id="stock"
        name="stock"
        min="0"
        value=product.stock

      )

    //- Ảnh (NHẬP LINK)
    .form-group
      label(for="thumbnail" upload-image) Ảnh 
      input.form-control(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      .image-preview-container(upload-image-preview-wrapper)
        .image-preview-content
          img(
            src=product.thumbnail
            upload-image-preview
          )
        span(close-image) x

    //- Trạng thái (RADIO)
    .form-group
      label Trạng thái
      .form-check
        input.form-check-input(
          type="radio"
          name="status"
          id="status-active"
          value="active"
          checked=(product.status == "active" ? true : false)
        )
        label.form-check-label(for="status-active") Hoạt động
      .form-check
        input.form-check-input(
          type="radio"
          name="status"
          id="status-inactive"
          value="inactive"
          checked=(product.status == "inactive" ? true : false)
        )
        label.form-check-label(for="status-inactive") Dừng hoạt động

    //- Vị trí
    .form-group
      label(for="position") Vị trí
      input.form-control(
        type="number"
        id="position"
        name="position"
        min="1"
        placeholder="Tự động"
        value=product.position
      )

    .mt-3
      button.btn.btn-primary(type="submit") Cập nhật
      a.btn.btn-secondary.ml-2(href=`${prefixAdmin}/products`) Quay lại


    script(src="/admin/js/product.js")
